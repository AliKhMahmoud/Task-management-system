<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= title %></title>
  <style>
    body { font-family: Arial, sans-serif; font-size: 12px; }
    .muted { color: #666; font-size: 11px; }
    .chips { margin: 10px 0 12px; }
    .chip { display:inline-block; border:1px solid #ddd; padding:6px 8px; border-radius: 8px; margin-right: 6px; }
    table { width:100%; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 6px; vertical-align: top; }
    th { background: #f5f5f5; }
  </style>
</head>
<body>
  <h2 style="margin:0;"><%= title %></h2>
  <div class="muted">Generated at: <%= generatedAt.toISOString() %> • By: <%= generatedBy %></div>

  <div class="chips">
    <span class="chip">Total: <b><%= stats.total %></b></span>
    <span class="chip">Done: <b><%= stats.done %></b></span>
    <span class="chip">In Progress: <b><%= stats.inProgress %></b></span>
    <span class="chip">Overdue: <b><%= stats.overdue %></b></span>
  </div>

  <div class="muted" style="margin-bottom:10px;">
    Filters — Status: <b><%= filters.status %></b>,
    Project: <b><%= filters.projectId %></b>,
    Assignee: <b><%= filters.assigneeId %></b>,
    Deadline: <b><%= filters.deadlineFrom %></b> → <b><%= filters.deadlineTo %></b>,
    Search: <b><%= filters.q %></b>
  </div>

  <table>
    <thead>
      <tr>
        <th style="width: 20%;">Title</th>
        <th style="width: 12%;">Status</th>
        <th style="width: 18%;">Project</th>
        <th style="width: 18%;">Assignee</th>
        <th style="width: 12%;">Deadline</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% if (!tasks || tasks.length === 0) { %>
        <tr><td colspan="6" class="muted">No tasks found.</td></tr>
      <% } %>

      <% (tasks || []).forEach(t => { %>
        <tr>
          <td><b><%= t.title %></b></td>
          <td><%= t.status %></td>
          <td><%= t.projectName %></td>
          <td>
            <%= t.assigneeName %>
            <% if (t.assigneeEmail) { %>
              <div class="muted"><%= t.assigneeEmail %></div>
            <% } %>
          </td>
          <td><%= t.deadlineText %></td>
          <td><%= t.description %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
